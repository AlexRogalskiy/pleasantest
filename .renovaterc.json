{
  "extends": ["group:recommended", "group:monorepos"],
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "matchPackageNames": ["node"],
      "enabled": false
    },
    {
      "matchDepTypes": ["dependencies"],
      "rangeStrategy": "bump"
    },
    {
      "matchPackageNames": ["puppeteer"],
      "prBodyNotes": [
        ":warning: **Warning:** Manually update the version numbers in URL's in README"
      ],
      "commitMessagePrefix": "[Requires manual changes]"
    },
    {
      "matchPackagePatterns": [
        "preact",
        "prop-types",
        "react",
        "sass",
        "svelte",
        "vue",
        "liquidjs"
      ],
      "matchDepTypes": ["devDependencies"],
      "prCreation": "immediate",
      "stabilityDays": 0,
      "groupName": "Compatability testing-only dependencies"
    }
  ],
  "prConcurrentLimit": 5,
  "branchConcurrentLimit": 15,
  "stabilityDays": 3,
  "prCreation": "status-success",
  "dependencyDashboard": true
}
